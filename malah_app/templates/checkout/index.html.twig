{% extends 'base.html.twig' %}

{% block title %}Checkout
{% endblock %}

{% block body %}

	{{ include("partials/title_section.html.twig", {'name':'Checkout'}) }}

	<div class="section">
		<div class="container">
			{{ form_start(checkout, {action: path('checkout_confirm')}) }}
			<div class="row">
				<div class="col-md-6">
					<div class="heading_s1">
						<h4>Your delivery Address</h4>
						<div class="content">
							{{ form_widget(checkout.address) | raw | replace({'[br]' : '<br>'}) | raw }}
						</div>
						<a href="{{ path('address_new') }}" class="btn btn-fill-out btn-block mt-1">Add new Address</a>
					</div>
					<div class="heading_s1">
						<h4>Your carrier</h4>
						<div class="content">
							{{ form_widget(checkout.carrier) | raw | replace({'[br]' : '<br>'}) | raw }}
						</div>
					</div>
					<div class="heading_s1">
						<h4>Additional information</h4>
						<div class="form-group mb-0">
							{{ form_widget(checkout.informations) | raw | replace({'[br]' : '<br>'}) | raw }}
						</div>
					</div>
				</div>

				<div class="col-md-6">
					<div class="order_review">
						<div class="heading_s1">
							<h4>Your Orders</h4>
						</div>
						<div class="table-responsive order_table">
							<table class="table">
								<thead>
									<tr>
										<th>Product</th>
										<th>Total</th>
									</tr>
								</thead>
								<tbody>
									{% for element in cart.products %}
										<tr>
											<td>
												{{element.product.name}}
												<span class="product-qty">x
													{{element.quantity}}</span>
											</td>
											<td>€
												{{ element.product.price / 100 }}</td>
										</tr>
									{% endfor %}
								</tbody>
								<tfoot>
									<tr>
										<th>Total HT</th>
										<td class="product-subtotal">€
											{{cart.data.subTotalHT}}</td>
									</tr>
									<tr>
										<th>Taxe</th>
										<td class="product-subtotal">€
											{{ cart.data.taxe }}</td>
									</tr>
									<tr>
										<th>Total TTC</th>
										<td class="product-subtotal">€
											{{ cart.data.subTotalTTC }}</td>
									</tr>
								</tfoot>
							</table>
						</div>
						<div class="payment_method">
							<div class="heading_s1">
								<h4>Payment</h4>
							</div>

						</div>
						<button type="submit" id="checkout-button" class="btn btn-fill-out btn-block">Place Order</button>
					</div>
				</div>
			</div>
			{{ form_end(checkout) }}
		</div>
	</div>
{% endblock %}
